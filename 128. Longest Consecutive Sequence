# Python 3

class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        x = set(nums)
        l = 0
        for i in x:
            if i - 1 not in x:
                l1 = 1
                while i + 1 in x:
                    l1 += 1
                    i += 1
                l = max(l,l1)
        return(l)
